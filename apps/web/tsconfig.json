{
	"include": ["**/*.ts", "**/*.tsx"],
	"compilerOptions": {
		"target": "ES2022",
		"jsx": "react-jsx",
		"module": "ESNext",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"types": ["vite/client"],

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,

		/* Linting */
		"skipLibCheck": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@inbound-hackathon/ai/*": ["../../packages/ai/*"],
			"@inbound-hackathon/email/*": ["../../packages/email/*"],
			"@inbound-hackathon/validation/*": ["../../packages/validation/*"],
			"@inbound-hackathon/backend/convex/_generated/*": ["../../packages/backend/convex/_generated/*"]
		}
	}
}
